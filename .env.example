# Copy this file to `.env` and replace placeholder values before running the agent CLI.

# === Core platform credentials ===
OPENAI_API_KEY=sk-your-openai-api-key
AZURE_CLIENT_ID=00000000-0000-0000-0000-000000000000
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=00000000-0000-0000-0000-000000000000
AZURE_SUBSCRIPTION_ID=00000000-0000-0000-0000-000000000000

# === Repository automation ===
GITHUB_TOKEN=ghp_yourgithubtoken
GITHUB_REPO_OWNER=your-github-username
GITHUB_REPO_NAME=your-repository

# === Application defaults ===
NODE_ENV=development
APP_BASE_URL=http://localhost:3000
DATABASE_URL=postgresql://user:password@localhost:5432/database

# === Data Scraper Configuration ===
# Google Sheets Integration (Optional)
GOOGLE_SHEETS_CREDENTIALS_PATH=./credentials/google-sheets-credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=15rFNiDyUtp89RijmXNJidzon5RUpgdCalkU1JxeUNJY

# Application Settings
APP_DATA_PATH=./data
CSV_EXPORT_PATH=./exports/contacts.csv

# Scraping Configuration
SCRAPE_DELAY_MS=2000
MAX_CONCURRENT_SCRAPES=2
BROWSER_POLL_INTERVAL_MS=1000

# Database Settings
DATABASE_PATH=./data/contacts.db

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/scraper.log

# Development
DEBUG_MODE=false
